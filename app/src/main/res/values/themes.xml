<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notally" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icon_background</item>
        <item name="colorSecondaryVariant">@color/icon_background</item>
        <item name="colorOnSecondary">#fbfbfb</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_color</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/background_color</item>
    </style>
</resources>